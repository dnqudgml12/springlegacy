<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.speinglegacyproject.mapper.BoardMapper">

    <select id="getList" resultType="org.example.speinglegacyproject.VO.BoardVO">
        SELECT * FROM board ORDER BY id DESC
    </select>

    <select id="get" parameterType="int" resultType="org.example.speinglegacyproject.VO.BoardVO">
        SELECT * FROM board WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="org.example.speinglegacyproject.VO.BoardVO">
        INSERT INTO board (title, content, writer)
        VALUES (#{title}, #{content}, #{writer})
    </insert>

    <update id="update" parameterType="org.example.speinglegacyproject.VO.BoardVO">
        UPDATE board SET title=#{title}, content=#{content} WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM board WHERE id = #{id}
    </delete>

</mapper>